.row
  .col-lg-12
    - if @area.errors.any?
      .alert.alert-warning.alert-dismissable
        %a.close{:'data-dismiss' => "alert", :href => '#'} &times;
        %i.fa.fa-exclamation-sign
        = pluralize(@area.errors.count, "error") + ' prevented this area from being created:'
        %ul
          - @area.errors.full_messages.each do |msg|
            %li= msg
.row
  .col-lg-12
  .well.bs-component
    %fieldset
      %legend Area
      = form_for(@area) do |f|
        .form-group
          .row
            .col-lg-2
              = f.label :name
            .col-lg-10
              = f.text_field :name, class: "form-control", maxlength: '45', placeholder: 'Enter your area...'
        .form-group
          .row
            .col-lg-2
              = f.label :number
            .col-lg-10
              = f.number_field :number, class: "form-control", maxlength: '5', placeholder: 'Enter your area number...'
        .row
          .col-lg-12
            .text-center{:style => "margin-top: 10px; margin-bottom: 20px;"}
              = link_to :back, style: "text-decoration:none; margin: 10px;" do
                %button.btn.btn-primary.btn-circle.btn-lg{:type => "button"}
                  %i.fa.fa-arrow-left
              = f.button :submit, :style => "text-decoration:none; margin: 10px;", :class => "btn btn-default btn-circle btn-lg" do
                %i.fa.fa-save

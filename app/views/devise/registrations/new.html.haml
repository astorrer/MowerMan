- provide(:title, 'Sign Up')

.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Sign Up
        .panel-body
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
            = devise_error_messages!
            %fieldset
              .form-group
                = f.email_field :email, placeholder: "E-mail", class: "form-control", :autofocus => true
              .form-group
                = f.password_field :password, placeholder: "Password", class: "form-control pwstrength"
              .form-group
                = f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control"
              / Change this to a button or input when using this as a form
              = f.submit "Sign Up", class: "btn btn-lg btn-success btn-block"
.row
  .col-sm-12
    .text-center
      %a{:href => "forgot_password.html"}
      = render "devise/shared/links"


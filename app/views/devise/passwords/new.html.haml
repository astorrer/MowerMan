- provide(:title, 'Forgot Password?')

.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Forget Password?
        .panel-body
          = devise_error_messages!
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
            %fieldset
              .form-group
                = f.email_field :email, placeholder: "E-mail", class: "form-control", :autofocus => true
              = f.submit "Reset my Password", class: "btn btn-lg btn-success btn-block"
  .row
    .col-sm-12
      .text-center
        = render "devise/shared/links"
      


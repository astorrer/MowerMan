<div class='row animated flipInX'>
  <div class='col-sm-12'>
		<div id="flash_messages">
		  <% flash.each do |key, value| %>
		    <div class='alert alert-info alert-dismissable'>
		      <a class="close" data-dismiss="alert" href="#">&times;</a>
		      <i class='icon-info-sign'></i>
			    <%= value %>
		    </div>
		  <% end %>
		</div>
	</div>
</div>
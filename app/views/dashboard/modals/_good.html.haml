#goodModal.modal{"aria-hidden" => "true", "aria-labelledby" => "goodModal", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4.modal-title Good Task Details | Most Recently Updated
      .modal-body
        .table-responsive
          %table.table.table-hover
            %thead
              %tr
                %th Area
                %th Equipment
                %th Part
                %th Actions
            %tbody
              - @page_good.each do |task|
                %tr
                  %td= task.area
                  %td= task.equipment
                  %td= task.part
                  %td= link_to 'VIEW', plantask_path(task), class: 'btn btn-default'
      .modal-footer
        = link_to "VIEW ALL #{@good}", view_good_path, class: 'btn btn-success'
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} CLOSE
